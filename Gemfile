gem 'uglifier', '>= 1.3.0'

gem 'therubyracer', platforms: :ruby
gem 'jquery-rails'
gem 'turbolinks'
gem 'devise'
gem 'haml-rails'
gem 'simple_form'
gem 'carrierwave'
gem 'rmagick'
gem 'capybara'
