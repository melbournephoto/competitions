group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
end

group :test do
  gem 'timecop', '~> 0.6.3'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'launchy'
  gem 'guard'
  gem 'guard-rspec'
  gem 'coveralls', require: false
end

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end
